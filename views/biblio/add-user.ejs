                  <h3><input id="bat_user" name="father_name" type="text"></h3>
                  <h3><input id="date_birth_user" name="date_birth" type="date"></h3>
                  <h3><input id="email_user" name="email" type="email"></h3>
                  <h3><input id="phone_user" name="phone_number" type="text"></h3>
                  <h3><input id="city_user" name="city" type="text"></h3>
                  <h3><input id="adress_user" name="address" type="text"></h3>
                  <button onclick="mess()" class="button-submit button1">Додати читача</button>
                  <h4 id="mess" style="display: none;">Читача додано</h4>
               </div>
               <div style="clear:both"></div>
            </form>
            </div>
         </div>
         <%- include('../partials/footer'); %>
      </div>
      <%- include('../partials/scripts'); %>
